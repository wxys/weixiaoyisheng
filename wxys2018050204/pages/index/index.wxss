/* pages/subscribe/index.wxss */
.get-position-groups{
	height:30px;
	font-size:30rpx;
	color:#666666;
	align-content: center;
	background:#fff;
	display:flex;
	justify-content:center;
	line-height:30px;
}

.banner_img {

width:750rpx;
height:100%;

}

.user-location-ico{
  height:18px;
  width:18px;


}
.user-location{
  color:#ff8100;
  display:flex;
  align-items: center;
  padding-left:5px;
}
  

.switch-index{
	padding:10px;
	display: flex;
	justify-content: center;
	align-items: center;
	border-bottom:1px solid #efefef;
}
.switch-btn{
	background:#28b7a3;
	width:150px;
	font-size:14px;
	color:#fff;
	padding:6px;
	border-radius:5px;
	text-align:center;

}


.attention-departments-ico{
	width:60px;
	height:60px;
}
.attention-departments-li{
	height:120px;
	border:0;
	flex:0 0 110px;
}
.attention-departments-name{
	font-size:13px;
	margin-top:2px;
	color:#b5b5b5;

}
.attention-departments-hospital{
  font-size:13px;
  margin-top:5px;
  color:#353535;
  font-weight:600;
  width:110px;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  text-align: center;

}



/*
  关注操作
*/
.operate-menu{
  position: fixed;
  left: 10px;
  bottom:5px;
  z-index:999;
}
.operate-menu-li{
  border-radius:50%;
  height:53px;
  width:53px;
  background:#59bdca;
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content: center;
  margin-bottom:5px;
}
.operate-menu-ico{
  width:16px;
  height:16px;
}
.is-doctor{
  width:25px;
  height:25px;
}
.operate-menu-text{
  font-size:10px;
  color:#fff;
  margin-top:3px;

}
.attention-groups{
  display: flex;
}
.cancel-attention-btn{
  display:flex;
  justify-content:center;
  font-size:13px;
  background:#ff8100;
  color:#fff;
  align-items: center;
  padding:0px 10px;
  border-bottom:1px solid #f3f3f3;

}
.cancel-attention-btn.active{
  background:#ee7a03;
}


.attention-departments-groups{
  display: flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
}


.cancel-attention-sbtn{
  display:flex;
  justify-content:center;
  font-size:13px;
  background:#cc5849;
  color:#fff;
  height:30px;
  line-height:30px;
  border-right:1px solid #fff;

}
.cancel-attention-ico{
  width:25px;
  height:25px;
  padding-bottom:5px;

}
