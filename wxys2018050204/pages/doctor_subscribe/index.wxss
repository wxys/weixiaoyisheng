    font-size:13px;
}
.doctor-hospital-wh{
    display: block;
}

.subscribe-number{
    color:#e4d172;
    font-size:16px;
    font-weight: 600;
}

.hospital-name{
    padding:10px;
    color: #212121;
    font-size:14px;
    background: #fff;
}

/*
    排班信息
*/
.date-scroll{
    height:157px;
    border-bottom:1px solid #3080e3;
}
.date-scroll-area{
    display:flex;
    justify-content:flex-start;
    flex-direction:row;
    
}

.scheduling-groups{
    display:flex;
    background: #fff;
}
.scheduling-time{
    display:flex;
    align-items:center;
    flex-direction: column;
    border-top:1px solid #ededed;
    border-right:1px solid #ededed;
    border-bottom:1px solid #ededed;
}
.scheduling-time-li{
  font-size:13px;
  width:25px;
  padding:11.5px 5px;
  color:#b4b4b4;
  height:52px;
}
.scheduling-time-li.border{
    border-bottom:1px solid #ededed;
}
.date-select-groups{
    display:flex;
    align-items:flex-start;
    flex-direction: column;
    flex:0 0 60px;
}
.date-select-li{
    width:60px;
    text-align:center;
    height:52.5px;
    display:flex;
    flex-direction:column;
    justify-content:center;
    font-size:13px;
    border-top:1px solid #ededed;
    border-right:1px solid #ededed;
}
.date-select-li.can{
    color:#fff;
    background:#3080e3;

}
.date-select-li.no-can{
    background:#f5f5f5;
    color: #bcbcbc;
}
.date-select-li .week{
    display: block;
    font-size: 15x;
    margin-top:1px;
    color:#828282;
}
.date-select-li .date{
    display: block;
    font-size: 12px;
    margin-top:2px;
    color:#5f5f5f;
}
