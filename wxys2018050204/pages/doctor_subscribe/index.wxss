.doctor-data-groups{
    align-items:center;
    background:#59bdca;
    /*background:linear-gradient(70deg,#28b7a3, #1fd496);*/
    padding:0px 10px;
    height:85px;
    position: fixed;
    width: 100%;
    top:0px;
    z-index: 999;
}
.doctor-name-wh{
    display: block;
    color:#fff;
    font-size:15px;
    font-weight:600;
}
.doctor-position-wh{
    margin-right:8px;
}

.doctor-position-wh,.doctor-departments-wh,.doctor-hospital-wh{
