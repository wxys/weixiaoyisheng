/* pages/note_detail/index.wxss */

page {
  font-family: "Helvetica Neue",
                 "Arial",
                 "PingFang SC",
                 "Hiragino Sans GB",
                 "STHeiti",
                 "Microsoft YaHei",
                 sans-serif;
}

.note-top-tab {
  background: #fff;
  /*border-bottom: 1px solid #f3f3f3;*/
  padding: 20px 15px 0px 15px;
}

.tab-note-title-groups {
  display: flex;
}

.tab-note-title {
  flex: 1.0;
  /*font-weight: 600;*/
  font-size: 22px;
  line-height: 33px;
}

.note-class-btn {
  padding: 5px 8px;
  background: #fff;
  color: #59bdca;
  font-size: 12px;
  border-radius: 6px;
  margin-left: 10px;
  height: 26px;
  line-height: 16px;
  border: 1px solid #59bdca;
  margin-top: 4px;
  width:60px;

}

.note-class-btn.active {
  background: #59bdca;
  color: #fff;
  border: 0px;
}

.content-set {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 5px;
  line-height: 24px;
  padding-bottom: 10px;
}

.note-source {
  font-size: 15px;
  color: #7f7f7f;
  flex: 1.0;
  margin-right: 10px;
}

.note-source-text {
  margin-right: 15px;
}

.font-set-groups {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 15px;
}

.font-ico {
  width: 17px;
  height: 17px;
  margin-right: 3px;
}

.min-font-ico {
  width: 12px;
  height: 12px;
}

.mid-font-ico {
  width: 14px;
  height: 14px;
  margin: 0px 5px;
}

.max-font-ico {
  width: 16px;
  height: 16px;
}

.note-content {
  background: #fff;
  color: #303030;
  line-height: 1.5;
  padding: 6px 15px;
}
/*字体选择弹窗样式*/
.arrow-up {
  width:0;
  height:0;
  border-left:14px solid transparent;
  border-right:14px solid transparent;
  border-bottom:15px solid #fff;
  position:absolute;
  z-index:20;
  right:-4px;
  top:23px;
}
.arrow-up-shade {
  width:0;
  height:0;
  border-left:17px solid transparent;
  border-right:17px solid transparent;
  border-bottom:15px solid #efefef;
  position:absolute;
  z-index:19;
  right:-6.5px;
  top:23px;
}
.font-select {
  position:absolute;
  right:0;
  top:37px;
  background:#fff;
  font-size:12px;
  color:#666;
  border:1px solid #efefef;
  z-index:9;
  width:730rpx;
  left:-20rpx;
  padding:15px 10px;
}

.font-select-li {
  margin: 0px 8px;
}

.font-select-li.active {
  font-weight: 600;
  font-size: 15px;
}
.font-size-view{
  display: flex;
  align-items: center;
  justify-content: center;
}
.font-size-view text{
  flex: 1.0;
}
.pick-up-groups{
  display: flex;
  justify-content: center;
  align-items: center;
  padding:20px 0px 5px 0px;
}
.pick-up-ico{
  width:35px;
  height:15px;
}


