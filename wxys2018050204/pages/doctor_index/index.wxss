/* pages/doctor_index/index.wxss */
page{
  background: #f5f5f5;
}
.doctor-user-groups{
  background:#fff;
  height:130px;
  /*align-items:center;*/

}
.doctor-user-groups-background{
  background: #59bdca;
  height:70px;
  width:100%;
  border-radius:-0px 0px 50% 50%;
  position:fixed;
}
.doctor-user-data-groups{
  display:flex;
  flex: 1.0;
  align-items:center;
  border-bottom:1px solid #ebebeb;
  padding:10px;
  height:70px;
}
.doctor-user-cover{
  width:80px;
  height:80px;
  border-radius:50%;
  position:absolute;
  top:25px;
  left:50%;
  margin-left:-40px;
}
.doctor-user-data{
  display: flex;
  flex:1.0;
  align-items: center;
  justify-content: center;
  padding:45px 10px 10px 10px;
  padding-top:105px;
}
.doctor-user-data text{
  padding-right:8px;
}
.doctor-user-name{
  font-size:17px;
  font-weight: 600;
  line-height: 1.5em;
}

.doctor-user-position{
  font-size:14px;
  
}
.doctor-user-authentication{
  font-size:15px;
  color:#ff8100;
  font-weight:600;
}

.btn-groups{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px;
  background: #fff;
}
.btn-ico{
  width: 20px;
  height: 20px;
  margin-right:5px;
}
.exit-btn,.authentication-btn{
  font-size:12px;
  padding:6px 10px;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10px;
}
.exit-btn{
  background: #f25b47;
}
.authentication-btn{
  background: #59bdca;
  margin-right:20px; 
}

.doctor-menu-list{
  display: flex;
  flex-wrap: wrap;
  background: #fff; 
}
.doctor-menu-li{
  flex:0 0 210rpx;
  height:180rpx;
  border-radius:15px;
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:center;
  margin:20rpx 20rpx;
}
.doctor-menu-li text{
  font-size:12px;
  color:#666;
  line-height:2.0;
  margin-top:5px;

}

.doctor-menu-ico{
  width:105rpx;
  height:105rpx;
}
.water{
  width:750rpx;
  position: absolute;
 
}
.water.left{
  left:-750rpx;
}
.water-groups{
  position:relative;
   height:40px;
}