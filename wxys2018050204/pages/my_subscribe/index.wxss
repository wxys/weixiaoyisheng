/* pages/my_subscribe/index.wxss */
.my-subscribe-li {
  display: flex;
  flex-direction: column;
  padding: 20rpx ;
  font-size: 28rpx;
  color: #666;
}

.my-subscribe-groups {
  background: #fff;
  padding: 10px  45rpx;
  border-radius: 10px;
  border: 1px solid #efefef;
}

.subscribe-date {
  color: #333;
  font-weight: 600;
  font-size:30rpx;
}

.my-subscribe-data-ico {
  width: 25px;
  height: 25px;
  margin-right: 5px;
}

.my-subscribe-data {
  color:#666;
  font-weight: 600;
  display: flex;
  align-items: center;
  padding-top: 8px;
}

.my-subscribe-data.last {

  padding-bottom: 8px;
}

.my-subscribe-data .hospital, .my-subscribe-data .doctor {
  margin-right: 8px;
  font-weight: 600;
}

.subscribe-state {
  display: flex;
  padding: 8px 5px 0px 5px;
  justify-content: space-between;
}

.subscribe-state .state-ico {
  width: 55px;
  padding: 7px 5px;
 
  font-size: 14px;
  border-radius: 6px;
  text-align: center;
  line-height:1.2;
  font-weight: 600;
  letter-spacing: 2rpx;
  color:red;
}


 .not-started
 {
    color:#8cc341;
 }

