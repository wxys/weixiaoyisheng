.operate-groups {
  display: flex;
}

.subscribe-state .subscribe-btn {
  padding: 5px 12px;
  background: #59bdca !important;
  color: #fff !important;
  font-size: 14px;
  border-radius: 6px;
  margin-left: 10px;
  line-height:19px !important;
}

.subscribe-state .remind-btn {
  padding: 5px 12px;
  background: #28b7a3 !important;
  color: #fff !important;
  font-size: 14px;
  border-radius: 6px;
  margin-left: 10px;
  line-height:19px !important;

}

.subscribe-time {
  text-align: center;
  margin-top: 5px;
  font-size: 13px;
}

