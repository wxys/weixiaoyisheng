/* pages/doctor_set/index.wxss */
.doctor-user-cover{
  width:80px;
  height:80px;
  border-radius:50%;
}
.smile-card-groups{
  background:#59bdca;
  padding:0px 20px;
  display:flex;
  align-items:center;
  position:fixed;
  width:100%;
  height:100px;
}
.smile-card-doctor-data{
  margin-left: 15px;
  color:#fff;
}
.smile-card-doctor-data-position,.smile-card-doctor-data-hospital{
  display: flex;
  align-items: center;
}
.smile-card-doctor-data-hospital{
  display:flex;
  margin-top:5px;
}
.doctor-user-name{
  font-size:17px;
  font-weight: 600;
}

.doctor-user-position{
  font-size:14px;
  margin-left:5px;
}
.doctor-user-hospital{
  font-size:14px;
  border-right:3px solid #fff;
  padding-right:5px;
  line-height:14px;
}
.doctor-user-departments{
  padding-left:5px;
  font-size:14px;
  line-height:14px;
}

.quick-mark-groups{
  display:flex;
  align-items:center;
  justify-content: center;
  padding:10px;
  flex-direction: column;
}
.scan-ico{
  width:100px;
  height:100px;
}
.quick-mark-img{
  width:550rpx;
  padding-top:20px;
}
.scan-btn{
  display:flex;
  align-items:center;
  justify-content: center;
  flex-direction: column;
  color:#000;
  padding:10px;
  font-weight: 600;
}
.scan-btn text{
  line-height: 1.5;
  font-size:15px;
}
.row-title{
    padding:0px 6px;
    background:#FFFFFF;
    margin-top:8px;
    color:#666666;
    font-weight:600;
    border-bottom:1px solid #ebebeb;
    font-size:15px;
    display:flex;
    height:35px;
    align-items: center;
    line-height:35px;
}
.li-left-ico{
    width:25px;
    height:25px;
    margin-left:7px;
}

.member-deadline{
    font-size:13px;
    color:#ff8100;
    margin-right:5px;
}
.row-title-content {
    flex-grow:1.0;
    margin-left:10px;
}

.li-right-ico{
    width:15px;
    height:15px;
    float:right;
}