/* pages/household_contacts/index.wxss */

page {
  background: #f5f5f5;
}

.contact-num {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f8f8f8;
  color: #a2a2a2;
  font-size: 14px;
  padding: 10px;
}

.contact-num image {
  width: 17px;
  height: 17px;
  padding-left: 3px;
}

.contact-list-li {
  display: flex;
  background: #28b7a3;
  font-size: 14px;
  padding: 10px;
  flex-direction: column;
  color: #fff;
  height: 75px;
}

.contact-list-row text {
  padding: 0px 5px;
}

.contact-list-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 5px 0px;
}

.no-bind {
  background: #cd5243;
}

/*自定义滑动删除li样式*/

.item {
  height: 150rpx;
  margin-bottom: 10px;
  border-bottom: 1rpx solid #fff;
}

.no-bind-remind{
  font-size:13px;
}